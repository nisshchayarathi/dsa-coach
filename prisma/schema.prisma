generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String
  photo     String?
  chats     Chat[]   // ðŸ‘ˆ One-to-many relation (one user â†’ many chats)
}

model Chat {
  id         String   @id @default(cuid())
  sender     String   // "user" or "bot"
  text       String
  createdAt  DateTime @default(now())

  // ðŸ‘‡ Relationship
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId     String
}
